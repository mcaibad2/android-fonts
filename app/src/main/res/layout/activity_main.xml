<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin" tools:ignore="MissingPrefix">

        <!-- Kufi -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Kufi" android:textSize="18sp"/>
        <TextView android:id="@+id/kufiTextView" fontPath="fonts/DroidKufi-Regular.ttf"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:lineSpacingExtra="-3dp" android:text="@string/lorem_ipsum"/>

        <!-- Cairo -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Cairo" android:textSize="18sp"/>
        <TextView android:id="@+id/cairoTextView" fontPath="fonts/Cairo-Regular.ttf"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:lineSpacingExtra="-3dp" android:text="@string/lorem_ipsum"/>

        <!-- Roboto -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Roboto" android:textSize="18sp"/>
        <TextView fontPath="fonts/Roboto-Regular.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:text="@string/lorem_ipsum"/>

        <!-- Droid Arabic Naskh -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Droid Arabic Naskh"
                  android:textSize="18sp"/>
        <TextView fontPath="fonts/DroidNaskh-Regular.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:lineSpacingExtra="-3dp"
                  android:text="@string/lorem_ipsum"/>

        <!-- Noto Kufi Arabic -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Noto Kufi Arabic"
                  android:textSize="18sp"/>
        <TextView fontPath="fonts/NotoKufiArabic-Regular.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:lineSpacingExtra="-3dp"
                  android:text="@string/lorem_ipsum"/>

        <!-- Noto Naskh Arabic -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Noto Naskh Arabic"
                  android:textSize="18sp"/>
        <TextView fontPath="fonts/NotoNaskhArabic-Regular.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:lineSpacingExtra="-3dp"
                  android:text="@string/lorem_ipsum"/>

        <!-- Noto Naskh Arabic UI -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="16dp" android:text="Noto Naskh Arabic UI"
                  android:textSize="18sp"/>
        <TextView fontPath="fonts/NotoNaskhArabicUI-Regular.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:lineSpacingExtra="-3dp"
                  android:text="@string/lorem_ipsum"/>

        <!-- Thabit -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp" android:text="Thabit" android:textSize="18sp"/>
        <TextView fontPath="fonts/Thabit.ttf" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:lineSpacingExtra="-3dp"
                  android:text="@string/lorem_ipsum"/>
    </LinearLayout>
</ScrollView>
